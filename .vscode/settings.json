{
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    "python.defaultInterpreterPath": "/Users/almat/codes/DDD/.venv/Scripts/python.exe",

    "python.linting.enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "C:/Users/almat/codes/DDD/.venv/Scripts/flake8.exe",
    "python.linting.flake8Args": [
        "--max-line-length=88",
        "--verbose"
    ],

    "python.formatting.provider": "black",
    "python.formatting.blackPath": "C:/Users/almat/codes/DDD/.venv/Scripts/black.exe",

    "python.sortImports.path": "C:/Users/almat/codes/DDD/.venv/Scripts/isort.exe",

    "python.analysis.extraPaths": [
        "C:/Users/almat/codes/DDD"
    ],
    "python.analysis.logLevel": "Trace",
